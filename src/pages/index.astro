---
import Layout from "@/layouts/Layout.astro";

import PlayListItemCard from "@/components/main/PlayListItemCard.astro";

import { playlists } from "@/data/music";
import Greetings from "@/components/third-party/svelte/Greetings.svelte";
---

<Layout title="Welcome to Astro.">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-500"
  >
    <!-- PageHader -->
    <div class="relative z-10 px-6 pt-10">
      <Greetings />
      <div class="flex flex-wrap mt-6 gap-4">
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
      </div>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>
